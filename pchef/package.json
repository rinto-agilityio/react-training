{
  "name": "pchef",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "eslint": "./node_modules/.bin/eslint --ext .jsx,.js packages/**/src",
    "flow": "flow"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^5.16.0",
    "flow-bin": "^0.98.0",
    "flow-typed": "^2.5.1",
    "husky": "^2.2.0",
    "imagemin-lint-staged": "^0.4.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && flow check"
    }
  },
  "lint-staged": {
    "{src}/**/*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{png,jpeg,jpg,gif,svg}": [
      "imagemin-lint-staged",
      "git add"
    ]
  }
}

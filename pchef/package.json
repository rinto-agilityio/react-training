{
  "name": "pchef",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "!packages/new-shared"
    ],
    "nohoist": []
  },
  "scripts": {
    "eslint": "./node_modules/.bin/eslint --ext .jsx,.js packages/**/src",
    "flow": "flow"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-jest-enzyme": "^7.0.2",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-flowtype": "^3.6.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "flow-bin": "0.98.0",
    "flow-typed": "^2.5.1",
    "husky": "^2.2.0",
    "imagemin-lint-staged": "^0.4.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && flow check"
    }
  },
  "lint-staged": {
    "{src}/**/*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{png,jpeg,jpg,gif,svg}": [
      "imagemin-lint-staged",
      "git add"
    ]
  },
  "dependencies": {
    "react-native-web": "^0.11.2"
  }
}
